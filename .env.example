# ==============================================
# Agentic Commerce on Arc - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----------------------------------------------
# Replicate API (AI Image Generation)
# ----------------------------------------------
# Get your token at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ----------------------------------------------
# Alchemy (Arc Blockchain RPC)
# ----------------------------------------------
# Get your RPC URL at: https://dashboard.alchemy.com
# Select Arc network when creating the app
ALCHEMY_ARC_RPC=https://arc-mainnet.g.alchemy.com/v2/your_api_key_here

# ----------------------------------------------
# WalletConnect (Web3 Wallet Integration)
# ----------------------------------------------
# Get your project ID at: https://cloud.walletconnect.com
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ----------------------------------------------
# Agent Wallet (Smart Contract Interactions)
# ----------------------------------------------
# WARNING: This is sensitive! Never commit real keys!
# Generate a new wallet for the agent - do not use personal wallet
# For testing, use Anvil's default test private key
AGENT_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
# SQLite (default for local development)
DATABASE_URL=sqlite:///./data/app.db

# PostgreSQL (for production on Railway)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ----------------------------------------------
# API Configuration
# ----------------------------------------------
# Backend API URL (for frontend to connect)
VITE_API_URL=http://localhost:8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------------
# Railway Deployment (CI/CD)
# ----------------------------------------------
# Get your token at: https://railway.app/account/tokens
RAILWAY_TOKEN=your_railway_token_here

# ----------------------------------------------
# Optional: Development Settings
# ----------------------------------------------
# Set to "true" for development mode
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Anvil local testnet (for local contract testing)
ANVIL_RPC=http://localhost:8545
